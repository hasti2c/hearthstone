<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane id="home-bg" prefHeight="800.0" prefWidth="1280.0" styleClass="background" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="1280.0" spacing="80.0">
         <children>
            <Button id="play-button" fx:id="playButton" mnemonicParsing="false" prefHeight="200.0" prefWidth="200.0">
               <font>
                  <Font size="64.0" />
               </font>
               <graphic>
                  <ImageView fitHeight="120.0" fitWidth="120.0" translateX="10.0">
                     <image>
                        <Image url="@../assets/controls/play-button.png" />
                     </image>
                  </ImageView>
               </graphic>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Button>
            <HBox alignment="CENTER" prefHeight="150.0" prefWidth="600.0" spacing="80.0">
               <children>
                  <Button id="collections" fx:id="collectionsButton" mnemonicParsing="false" prefHeight="100.0" prefWidth="160.0" styleClass="home" text="Collections">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Button>
                  <Button fx:id="storeButton" mnemonicParsing="false" prefHeight="100.0" prefWidth="160.0" styleClass="home" text="Store">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Button>
                  <Button fx:id="statsButton" mnemonicParsing="false" prefHeight="100.0" prefWidth="160.0" styleClass="home" text="Stats">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets top="80.0" />
         </padding>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="30.0">
         <children>
          <Button fx:id="homeLogoutButton" mnemonicParsing="false" text="Log Out" />
            <Button fx:id="homeExitButton" mnemonicParsing="false" text="Exit Game" />
         </children>
         <BorderPane.margin>
            <Insets bottom="30.0" />
         </BorderPane.margin>
      </HBox>
   </bottom>
   <stylesheets>
      <URL value="@../css/home.css" />
      <URL value="@../css/defaults.css" />
   </stylesheets>
</BorderPane>
